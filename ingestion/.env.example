# MariaDB Configuration
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=porcool
MARIADB_PASSWORD=porcool_secret
MARIADB_DATABASE=porcool

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=porcool

# RabbitMQ Configuration
RABBITMQ_URI=amqp://guest:guest@localhost:5672/
RABBITMQ_QUEUE_NAME=porcool-ingestion-non-relational-database-to-relational-database

# Ingestion Configuration
INGESTION_BATCH_SIZE=100

# OpenSearch Logging Configuration
# Set OPENSEARCH_ENABLED=true to enable centralized logging to OpenSearch
# Logs will fall back to stdout if OpenSearch is unavailable
OPENSEARCH_ENABLED=false
OPENSEARCH_URL=https://opensearch:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_PREFIX=porcool-ingestion-non-relational-database-to-relational-database
OPENSEARCH_RETENTION_DAYS=90

# Firebase/Firestore Configuration
# Set FIREBASE_ENABLED=true to enable Firestore sync metadata updates
# The service account JSON file must be placed at FIREBASE_SERVICE_ACCOUNT_PATH
FIREBASE_ENABLED=false
FIREBASE_SERVICE_ACCOUNT_PATH=firebase_service_account.json
FIREBASE_SYNC_METADATA_SERVICE_NAME=porcool-ingestion-non-relational-db-to-relational-db

# Docker Compose specific
MYSQL_ROOT_PASSWORD=root_secret
